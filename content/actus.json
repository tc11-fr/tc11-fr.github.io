[
  {#for post in site.collections.posts}
    {
      "categorie": "{post.data.category}",
      "titre": "{post.title}",
      "lien": "{post.url.absolute}",
      "resume": "{post.description}",
      "date": "{post.date.format('yyyy-MM-dd')}",
      "lienTexte": "{post.data.labelDetails ?: 'Voir le détail →'}"
    }{#if !post_isLast},{/if}
  {/for}
]
